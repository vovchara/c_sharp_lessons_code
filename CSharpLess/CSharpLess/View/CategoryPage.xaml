<Page x:Class="CSharpLess.View.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpLess.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryPage">

    <Grid>
        <Label x:Name="TitleTxt" FontSize="30" Content="" HorizontalAlignment="Left" Margin="350,24,0,0" VerticalAlignment="Top" Width="427"/>
        <StackPanel x:Name="ItemsHolder" HorizontalAlignment="Left" Margin="30,100,100,120">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
        <Button x:Name="BackBtn" Content="go back" HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top" Height="39" Width="70"/>
    </Grid>
</Page>
